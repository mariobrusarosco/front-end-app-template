{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["ES6"],
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["src/domains/deprecated", "node_modules", "src/templates"]
}
